        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="login" Height="365.883" Width="299" Background="#FFCFCFCF" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
