        <Button x:Name="login1" Content="LOGIN" HorizontalAlignment="Left" Margin="103,273,0,0" VerticalAlignment="Top" Width="96" Height="32" Background="#FF4A2653" Foreground="White" FontSize="18" Click="login1_Click" FontWeight="Bold" BorderBrush="{x:Null}"/>
        <Label x:Name="a" Content="LOGIN" Margin="9,36,100,0" VerticalAlignment="Top" Height="50" Foreground="White" FontSize="27"/>

    </Grid>
</Window>
