        <TextBox x:Name="username" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Margin="71,162,0,0" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="71,219,0,0" VerticalAlignment="Top" Width="160" Height="28"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="67,133,0,0" VerticalAlignment="Top" Foreground="White" FontSize="17" IsEnabled="False" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="67,190,0,0" VerticalAlignment="Top" Foreground="White" FontSize="17" FontWeight="Bold" />
        <Rectangle Fill="#FF4A2653" HorizontalAlignment="Left" Width="300" Margin="0,352,-1,0"/>
        <Rectangle Fill="#FF4A2653" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="300" Margin="-1,38,0,0"/>
