        mc:Ignorable="d"
        Height="788.351" Width="1374.922" Background="#FFCFCFCF">
    <Grid>
        <Rectangle Fill="#FF3D1A55" HorizontalAlignment="Left" Height="82" Stroke="#FF3D1A55" VerticalAlignment="Top" Width="500" Margin="852,68,-757,0"/>
        <TextBlock x:Name="txt_op" HorizontalAlignment="Left" Margin="18,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="cabin" FontSize="18.667"><Run Text="Operator&#x9;"/><Run Text="&#x9;"/><Run Text=":"/></TextBlock>
        <TextBlock x:Name="txt_jam" HorizontalAlignment="Left" Margin="18,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="cabin" FontSize="18.667"><Run Text="Jam&#x9;"/><Run Text="&#x9;"/><Run Text=":"/></TextBlock>
