        <TextBlock x:Name="txt_tanggal" HorizontalAlignment="Left" Margin="18,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="cabin" FontSize="18.667"><Run Text="Tanggal"/><Run Text="&#x9;"/><Run Text="&#x9;:"/></TextBlock>
        <Label x:Name="label_bayar" Content="Bayar&#x9;:" HorizontalAlignment="Left" Margin="738,158,-260,0" VerticalAlignment="Top" FontFamily="Cabin" FontSize="21.333" FontWeight="Bold" Width="117"/>
        <TextBox x:Name="bayar_box" HorizontalAlignment="Left" Height="36" Margin="852,158,-757,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" BorderBrush="#FF3D1A55" SelectionBrush="#FF3D1A55" FontFamily="Cabin" FontSize="48" TextAlignment="Right"/>
