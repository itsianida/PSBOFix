        <Button x:Name="button_hapus" Content="Hapus Item" HorizontalAlignment="Left" Margin="173,684,0,-420" VerticalAlignment="Top" Width="142" Height="29" FontFamily="Cabin" FontSize="18.667" Background="#FF3D1A55" Foreground="White"/>
        <Label x:Name="label_total" Content="Total&#x9;:" HorizontalAlignment="Left" Margin="735,71,-257,0" VerticalAlignment="Top" FontFamily="Cabin" FontSize="21.333" FontWeight="Bold" Width="117"/>
        <Button x:Name="button" Content="Cetak" HorizontalAlignment="Left" Margin="1190,708,-752,-457" VerticalAlignment="Top" Width="157" Height="42" Background="#FFFFDC45" BorderBrush="#FFFFDC45" FontFamily="Cabin" FontSize="21.333" FontWeight="Bold"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="347" Width="1366" Margin="0,230,-771,-284"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="53" Margin="10,588,-401,-348" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="986"/>
        <TextBlock x:Name="mainlabel3" HorizontalAlignment="Left" Margin="13,30,0,0" TextWrapping="Wrap" Text="Point of Sale" VerticalAlignment="Top" Foreground="#FF3D1A55" Height="67" Width="353" FontSize="64" FontFamily="Alegreya Sans"/>
        <TextBlock x:Name="tanggal" HorizontalAlignment="Left" Margin="180,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Cabin" Foreground="Black" Height="18" Width="208" Text="{Binding Source={x:Static sys:DateTime.Today},StringFormat='{}{0:dddd, MMMM dd, yyyy}'}" FontSize="17"/>

    </Grid>
</Window>
